#############################

CC = gcc
SRC = main.c holberton.c
NAME = holberton
OBJ = $(SRC:%.c=%.o)
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

#############################
.PHONY: all

all: $(OBJ)
		$(CC) $(OBJ) $(CFLAGS) $(NAME)

clean:
		$(RM) *~ $(NAME)

oclean:
		$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
